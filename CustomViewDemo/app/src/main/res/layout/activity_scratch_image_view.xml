<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jieleo.customviewdemo.activity.ScratchImageViewActivity">


    <com.cooltechworks.views.ScratchImageView
        android:id="@+id/scratch_image_view"
        android:layout_width="match_parent"
        android:src="@mipmap/bg_01"
        android:layout_height="wrap_content"/>

    <com.cooltechworks.views.ScratchTextView
        android:id="@+id/scratch_text_view"
        android:layout_below="@id/scratch_image_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
</RelativeLayout>
