<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <!--ToolBar背景-->
        <item name="colorPrimary">#2e8abb</item>
        <!--通知栏背景-->
        <item name="colorPrimaryDark">#3A5FCD</item>
        <!--虚拟按键背景-->
        <item name="android:navigationBarColor">#2e8abb</item>
        <!--右上角Menu小圆点颜色-->
        <item name="android:textColorSecondary">#ffffff</item>

        <item name="android:windowBackground">@color/f88</item>
    </style>

    <style name="ToolBarPopMenu" parent="@style/ThemeOverlay.AppCompat.Dark">

        <item name="android:colorBackground">#000000</item>

        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">

        <!--把该属性改为false即可使menu位置位于toolbar之下-->
        <item name="overlapAnchor">false</item>
    </style>


</resources>
