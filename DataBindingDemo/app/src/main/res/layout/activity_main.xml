<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="employee"
            type="com.jieleo.databindingdemo.Employee"/>

        <variable
            name="presenter"
            type="com.jieleo.databindingdemo.MainActivity.Presenter"/>

        <variable
            name="user"
            type="com.jieleo.databindingdemo.User"/>
    </data>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jieleo.databindingdemo.MainActivity"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入FirstName"
            android:onTextChanged="@{presenter.onTextChanged}"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入LastName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{presenter.onClick}"
            android:text="@{employee.first_name}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> presenter.onClickListenerBinding(employee)}"
            android:text="@{employee.last_name}"/>

        <ImageView
            app:imageUri="@{user.imageUri}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text='@{employee.first_name??"小明"}'
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>
