<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.lanou.dllo.mediaplayer.MainActivity">

    <TextView
        android:id="@+id/song_name"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/singer"
        android:textSize="25sp"
        android:layout_below="@id/song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/play_btn"
        android:layout_width="match_parent"
        android:text="播放"
        android:layout_below="@id/singer"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/pause_btn"
        android:layout_width="match_parent"
        android:text="暂停"
        android:layout_below="@id/play_btn"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:layout_below="@id/pause_btn"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/lastBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="上一首"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/nextBtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="下一首"
            android:layout_height="match_parent" />
    </LinearLayout>
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_below="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/linerlayout"
        android:layout_below="@id/seekbar"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/singleplay_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="单曲循环"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/repeatplay_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="循环播放"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/randomplay_btn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="随机播放"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="50dp"
        android:id="@+id/head_Iv"
        android:layout_below="@id/linerlayout"
        android:layout_height="50dp" />
    <ListView
        android:layout_width="match_parent"
        android:id="@+id/listview"
        android:layout_below="@id/head_Iv"
        android:layout_height="match_parent">

    </ListView>
</RelativeLayout>
