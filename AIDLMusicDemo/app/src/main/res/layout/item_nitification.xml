<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#d6000000"
                android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_notification"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/tv_song_name_notification"
        android:layout_toRightOf="@id/iv_notification"
        android:layout_width="wrap_content"
        android:layout_alignTop="@id/iv_notification"
        android:textSize="19sp"
        android:text="哈哈"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_height="20dp"/>
    <TextView
        android:id="@+id/tv_singer_name_nitification"
        android:layout_below="@id/tv_song_name_notification"
        android:layout_alignLeft="@id/tv_song_name_notification"
        android:paddingLeft="10dp"
        android:text="刘浩"
        android:textSize="13sp"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="15dp"/>
    <RelativeLayout
        android:layout_toRightOf="@id/iv_notification"
        android:layout_below="@id/tv_singer_name_nitification"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/iv_last_notification"
            android:src="@mipmap/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_play_notification"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_next_notification"
            android:layout_width="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    </RelativeLayout>